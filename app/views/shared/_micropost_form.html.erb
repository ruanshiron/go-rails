<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("home.compose_new_post") %>
  </div>
  <%= f.submit t("home.post"), class: "btn btn-primary" %>
  <div class="field">
    <div class="col-md-4">
      <table class="user-photo-form">
        <%= f.fields_for :pictures do |picture| %>
          <%= render 'shared/picture_fields', f: picture %>
        <% end %>
        <%= link_to_add_association (t "add_a_photo"), f, :pictures, partial: 'shared/picture_fields', class: "btn btn-default" %>
      </table>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $('#micropost_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });

</script>