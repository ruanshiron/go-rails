<% provide(:title, "Log in") %>


<div class="row justify-content-md-center">
  <div class="col-md-6">
    <h1><%= t("nav.login") %></h1>

    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label t("edit.email") %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label t("edit.password") %>
      <%= link_to t("edit.forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("edit.remember_me") %></span>
      <% end %>

      <%= f.submit t("nav.login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t("edit.new_user") %><%= link_to t("nav.signup"), signup_path %></p>
    <%= link_to t("edit.signin_with_facebook"), "/auth/facebook" %>
  </div>
</div>