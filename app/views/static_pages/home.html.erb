<% if logged_in? %>
  <div class="row reverse">
    <aside class="col-md-4 ">
        <section class="user_info ">
          <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <br>
        <%= link_to t("home.new_post"), new_micropost_path, class: "btn btn-success btn-block"%>
    </aside>

    <div class="col-md-8">
      <h1 class="my-4"><%= t("home.feed")%>
      </h1>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to our website</h1>

    <h2>
      Đây là một trang landing page
    </h2>
    <br/>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

<% end %>