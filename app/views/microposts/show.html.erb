<div class="row justify-content-md-center">

  <!-- Post Content Column -->
  <div class="col-lg-8">

    <!-- Title -->
    <h1 class="mt-4"><%= @micropost.title%></h1>

    <!-- Author -->
    <p class="lead">
      <%= link_to @micropost.user.name, @micropost.user%>
    </p>

    <hr>

    <!-- Date/Time -->
    <p><%=t("home.post")%> <%= time_ago_in_words(@micropost.created_at) %> <%= t("micropost.ago")%></p>

    <hr>

    <!-- Preview Image -->
    <% if @micropost.pictures.length != 0 %>
      <div id="carouselExampleIndicators" class="carousel slide " data-ride="carousel">
        <ol class="carousel-indicators">
          <% @micropost.pictures.each_with_index do |picture, i| %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= i%>" class="<%= 'active' if i==0%>"></li>
          <% end %>
        </ol>
        <div class="carousel-inner">
          <% @micropost.pictures.each_with_index do |picture, i| %>
            <div class="carousel-item <%= 'active' if i==0%>">
              <%= image_tag((picture.src.url), class: "d-block w-100") %>
            </div>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <hr>
    <% end %>
    

    <!-- Post Content -->
    <%= raw @micropost.content%>
    <hr>


  </div>

  
</div>